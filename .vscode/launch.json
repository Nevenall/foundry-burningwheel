  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Index",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "program": "${workspaceFolder}\\index.js"
    },
    {
      "type": "chrome",
      "request": "launch",
      "name": "Launch Chrome",
      "url": "https://localhost:3030/",
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch FoundryVTT",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "program": "C:/Program Files/FoundryVTT/resources/app/main.js",
      "args": [
        "--port=3030",
        "--dataPath=C:/foundry-dev"
      ]
    },
  ]
}